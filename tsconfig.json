{
    "compilerOptions": {
        "target": "ES5",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "declaration": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "removeComments": false,
        "noImplicitAny": false,
        "skipLibCheck": true,
        "noEmitHelpers": true,
        "lib": [
            "es2015",
            "es2017",
            "dom"
        ]
    },
    "exclude": [
        "node_modules"
    ]
}